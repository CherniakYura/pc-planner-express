<% layout('layout') -%>

    <section class="title delete">
        <h1>Delete Component:</h1>
        <h2>
            <%= component.name %>
        </h2>
    </section>

    <section class="deleteSection">
        <p id="confirmationMsg">Are you sure you want to delete this component?</p>

        <form action="" method="POST">
            <input type="hidden" name="id" id="id" value="<%= component._id %>" required />
            <input type="hidden" name="filename" id="filename" value="<%= component.fileName %>" required />
            <fieldset>
                <legend>ADMIN PASSWORD</legend>
                <input type="password" name="password" id="password" required>
            </fieldset>
            <% if(typeof errors!='undefined'){ %>
                <p class="errorMsg">
                    <%= errors[0] %>
                </p>
            <% } %>
            <button type="submit" class="yellow-btn delete-btn block">Delete</button>
        </form>
        <a class="cancel block" href="<%= component.url %>">Cancel</a>
    </section>